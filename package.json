{
	"name": "index-generator",
	"displayName": "index-generator",
	"description": "The extension generates an index file with exports.",
	"version": "0.0.4",
	"license": "MIT",
	"repository": "https://github.com/BoomSoftware/index-generator.git",
	"publisher": "przemo1115",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.generateIndex",
		"onCommand:extension.generateIndexWithFolders"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.generateIndex",
				"title": "Generate/Update index with typescript files"
			},
			{
				"command": "extension.generateIndexWithFolders",
				"title": "Generate/Update index with folders and typescript files"
			}
		],
		"keybindings": [
			{
				"command": "extension.generateIndex",
				"key": "ctrl+alt+g",
				"mac": "shift+cmd+g"
			},
			{
				"command": "extension.generateIndexWithFolders",
				"key": "ctrl+alt+f",
				"mac": "shift+cmd+f"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.6",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"fs-extra": "^9.0.1"
	}
}
